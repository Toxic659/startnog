<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <style media="screen">
      body {
        font-family: 'Lato', sans-serif;
        color: #4A4A4A;
        display: flex;
        justify-content:center;
        align-items: center;
        margin:0;
        padding: 0;
          background-color: #000201;
          color: white;
      }
      form{
        width: 80%;

        padding: 30px;
      }
      .carD{
        margin: 30px auto;

        width: 80%;

        padding: 30px;
        background-color: #6A8498;
      }
    .sidenavv{
      padding: 10px;
    }
    .sidenavv li{
      margin-bottom: 10px;
    }
    .sidenavv ul li a{
      text-decoration: none;
      color: white;

    }
    .sidenavv a:hover{
      color: green;
    }
    .dashbtn{
      background-color: #e3faac;
      color: black;
      margin-left: 19%;
      margin-top: 10px;
    }
    .dashbtn:hover{
      background-color: green;
    }
    </style>
    <script src="https://kit.fontawesome.com/ffb4c77547.js" crossorigin="anonymous"></script>

  </head>
  <body>
    <section class="sideBar">
      <a class="btn btn-primary dashbtn" data-bs-toggle="offcanvas" href="#offcanvasDark" role="button" aria-controls="offcanvasDarkLabel"> Dashboard Menu </a>
      <div class="offcanvas offcanvas-start show text-bg-dark" tabindex="-1" id="offcanvasDark" aria-labelledby="offcanvasDarkLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasExampleLabel">Starngo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <div class="sidenavv">
            <ul>
              <li><a href="/dash">
                  <i class="fa-solid fa-gauge-high"></i> Main Dashboard </a></li>
              <li> <a href="/cars">
                  <i class="fa-solid fa-car"></i> All Cars </a></li>
              <li> <a href="/rented">
                  <i class="fa-solid fa-car-on"></i>
                  Rented Cars </a></li>
                  <li> <a href="/notrented">
                      <i class="fa-solid fa-car-rear"></i>
                      Avaliable Cars </a></li>
              <li> <a href="/users">
                  <i class="fa-solid fa-users"></i>
                  Users </a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <form class="" action="/del" method="post">

      <% cars.forEach(function (car) { %>
        <div class="carD border border-dark rounded ">


        <label for="">Car Name: </label>
        <input class="form-control" type="text" value="<%= car.name %>" aria-label="readonly input example" readonly>

      <label for="">Car Year: </label>
      <input class="form-control" type="text" value="<%= car.year %>" aria-label="readonly input example" readonly>
      <label for="">Car Model: </label>
      <input class="form-control" type="text" value="<%= car.model %>" aria-label="readonly input example" readonly>
      <label for="">Car KM: </label>
      <input class="form-control" type="text" value="<%= car.km %>" aria-label="readonly input example" readonly>
      <label for="">Car Seats: </label>
      <input class="form-control" type="text" value="<%= car.seats%>" aria-label="readonly input example" readonly>
      <label for="">Car plate N.O. : </label>
      <input class="form-control" type="text" value="<%= car.plate %>" aria-label="readonly input example" readonly>
      <label for="">Car notes: </label>
      <input class="form-control" type="textarea" value="<%= car.notes %>" aria-label="readonly input example" readonly>

  <br>
    <%  car.images.forEach(function(img){ %>
        <img src="<%=img%>" alt="no img" class="rounded" style="width: 200px; height:200px; ">
    <%  }) %>
    <br>
    <br>


      <input  type="checkbox" onchange="this.form.submit()" name="cardel" value="<%=car._id%>" >
      <label for="">delete this car</label>




<!-- <form class="" action="/revokerent" method="post">
  <input type="checkbox" onchange="this.form.submit()" name="revokerent"  value="<%=car._id%>">
</form> -->


<br>
<br>
<br>

      </div>

  <% }) %>

    </form>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

  </body>
</html>
