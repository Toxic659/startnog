  </head>
  <body>
    <section class="sideBar">
      <a class="btn btn-primary dashbtn" data-bs-toggle="offcanvas" href="#offcanvasDark" role="button" aria-controls="offcanvasDarkLabel"> Dashboard Menu </a>
      <div class="offcanvas offcanvas-start show text-bg-dark" tabindex="-1" id="offcanvasDark" aria-labelledby="offcanvasDarkLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasExampleLabel">Starngo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <div class="sidenavv">
            <ul>
              <li><a href="/dash">
                  <i class="fa-solid fa-gauge-high"></i> Main Dashboard </a></li>
              <li> <a href="/cars">
                  <i class="fa-solid fa-car"></i> All Cars </a></li>
              <li> <a href="/rented">
                  <i class="fa-solid fa-car-on"></i>
                  Rented Cars </a></li>
                  <li> <a href="/notrented">
                      <i class="fa-solid fa-car-rear"></i>
                      Avaliable Cars </a></li>
              <li> <a href="/users">
                  <i class="fa-solid fa-users"></i>
                  Users </a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <form class="" action="/rent" method="post">
      <label for="">Car ID: </label>
      <input class="form-control" type="text" name="id" value="<%= arr[0]._id %>" aria-label="readonly input example" readonly>
      <label for="">Car Name: </label>
      <input class="form-control" type="text" value="<%= arr[0].name %>" aria-label="readonly input example" readonly>
      <label for="">Car Year</label>
      <input class="form-control" type="text" value="<%= arr[0].year %>" aria-label="readonly input example" readonly>
      <label for="">Car Model</label>
      <input class="form-control" type="text" value="<%= arr[0].model %>" aria-label="readonly input example" readonly>
      <label for="">Car KM</label>
      <input class="form-control" type="text" value="<%= arr[0].km %>" aria-label="readonly input example" readonly>
      <label for="">Car Seats: </label>
      <input class="form-control" type="text" value="<%= arr[0].seats%>" aria-label="readonly input example" readonly>
      <label for="">Car plate N.O. : </label>
      <input class="form-control" type="text" value="<%= arr[0].plate %>" aria-label="readonly input example" readonly>
      <label for="">Car Notes</label>
      <input class="form-control" type="text" value="<%= arr[0].notes %>" aria-label="readonly input example" readonly>
      <br>

      <%  arr[0].images.forEach(function(img){ %>
          <img src="<%=img%>" alt="no img" style="width: 200px; height:200px">
      <%  }) %>
      <br>
      <br>

      <label for="">The tenant of the car name</label>
      <input class="form-control" type="text" name="renname" value="">
      <label for="">The tenant of the car ID number</label>
      <input class="form-control" type="text" name="renid" value="">
      <label for="">The beginning of the lease term</label>
      <input class="form-control" type="date" name="rendates" value="">
      <label for="">The end of the lease term</label>
      <input class="form-control" type="date" name="rendatee" value="">
      <button type="submit" class="btn" name="submit">Rent</button>








    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

  </body>
</html>
