    <style media="screen">
    body {
      font-family: 'Lato', sans-serif;
      color: #4A4A4A;
      display: flex;
      justify-content:center;
      align-items: center;
      margin:0;
      padding: 0;
        background-color: #000201;
        color: white;
    }
    form{
      width: 80%;

      padding: 30px;
    }
    .carD{
      margin: 30px auto;

      width: 80%;

      padding: 30px;
      background-color: #6A8498;
    }

  label,input{
    display: block;
  }
  input{
    margin-top: 15px;
    margin-bottom:  15px;

  }
  form .btn {
    outline: none;
    border: none;
