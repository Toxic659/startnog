<body>
  <section class="sideBar">
    <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasDark" role="button" aria-controls="offcanvasDarkLabel"> Link with href </a>
    <div class="offcanvas offcanvas-start show text-bg-dark" tabindex="-1" id="offcanvasDark" aria-labelledby="offcanvasDarkLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Starngo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <div class="sidenavv">
          <ul>
            <li><a href="/dash">
                <i class="fa-solid fa-gauge-high"></i> Main Dashboard </a></li>
            <li> <a href="/cars">
                <i class="fa-solid fa-car"></i> All Cars </a></li>
            <li> <a href="/rented">
                <i class="fa-solid fa-car-on"></i>
                Rented Cars </a></li>
                <li> <a href="/notrented">
                    <i class="fa-solid fa-car-rear"></i>
                    Avaliable Cars </a></li>
            <li> <a href="/users">
                <i class="fa-solid fa-users"></i>
                Users </a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <section class="carsCard">
    <div class="container text-center">
      <div class="container text-center">
        <div class="row row-cols-2">
          <div class="col d-flex justify-content-center ">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">All Cars</h5> <% let carCounter = 0; %> <% cars.forEach(function(car){ %> <%  carCounter++ %> <% }) %> <h4>you have <%=carCounter %> cars</h4>
                <p class="card-text">Show all the Cars in your System</p>
                <a href="/cars" class="card-link">Info</a>
              </div>
            </div>
          </div>
          <div class="col d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Avaliable Cars</h5> <% let acarCounter = 0; %> <% let nacarCounter = 0; %> <% cars.forEach(function(car){ %> <%  if (car.rented == "not rented") { %> <%  acarCounter++ %> <% }else { %> <%  nacarCounter++ %>
                <%  } %> <% }) %> <h4><%=acarCounter %> / <%=carCounter %></h4>
                <p class="card-text">Show all the Avaliable(not rented) cars in your system</p>
                <a href="/notrented" class="card-link">Info</a>
              </div>
            </div>
          </div>
          <div class="col d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Unavailable Cars</h5>
                <h4><%=nacarCounter %> / <%=carCounter %></h4>
                <p class="card-text">Show all the Unavaliable(rented) cars in your system</p>
                <a href="/rented" class="card-link">Info</a>
              </div>
            </div>
          </div>
          <div class="col d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Users</h5> <% let userCounter = 0; %> <% users.forEach(function(user){ %> <%  userCounter++ %> <% }) %> <h4>you have <%=userCounter %> clients</h4>
                <p class="card-text">Show all of your clients</p>
                <a href="/users" class="card-link">Info</a>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
